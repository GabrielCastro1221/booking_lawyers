<link rel="stylesheet" href="/css/register.css">

<section class="register-body">
    <div class="wrapper">
        <div class="form-header">
            <div class="titles">
                <div class="title-register">Registrate</div>
            </div>
        </div>
        <form class="register-form" autocomplete="off">
            <div class="input-box">
                <input type="text" class="input-field" id="name" required>
                <label for="name" class="label">Nombre de usuario</label>
                <i class="bx bx-user icon"></i>
            </div>
            <div class="input-box">
                <input type="text" class="input-field" id="email" required>
                <label for="email" class="label">Email</label>
                <i class="bx bx-envelope icon"></i>
            </div>
            <div class="input-box">
                <input type="password" class="input-field" id="password" required>
                <label for="password" class="label">Password</label>
                <i class="bx bx-lock-alt icon"></i>
            </div>
            <div class="form-cols">
                <div class="col-1">
                    <input type="checkbox" id="agree">
                    <label for="agree">Acepto terminos y condiciones</label>
                </div>
                <div class="col-2"></div>
            </div>
            <div class="input-box">
                <button class="btn-submit" id="SignUpBtn">Crear cuenta <i class="bx bx-log-out"></i></button>
            </div>
            <div class="switch-form">
                <span>Ya tienes cuenta? <a href="/login">Ingresa</a></span>
            </div>
        </form>
    </div>
</section>

<script src="/js/register.js"></script>