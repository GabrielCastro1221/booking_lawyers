<link rel="stylesheet" href="/css/login.css">

<section class="login-body">
    <div class="wrapper">
        <div class="form-header">
            <div class="titles">
                <div class="title-login">Ingresar</div>
            </div>
        </div>
        <form class="login-form" autocomplete="off">
            <div class="input-box">
                <input type="email" class="input-field" id="email" required>
                <label for="email" class="label">Email</label>
                <i class="bx bx-envelope icon"></i>
            </div>
            <div class="input-box">
                <input type="password" class="input-field" id="password" required>
                <label for="password" class="label">Password</label>
                <i class="bx bx-lock-alt icon"></i>
            </div>
            <div class="form-cols">
                <div class="col-1"></div>
                <div class="col-2">
                    <a href="/reset-password">Olvidaste tu contraseña?</a>
                </div>
            </div>
            <div class="input-box">
                <button class="btn-submit" id="SignInBtn">Iniciar sesión <i class="bx bx-log-in"></i></button>
            </div>
            <div class="switch-form">
                <span>No tienes cuenta? <a href="/register">Registrate</a></span>
            </div>
        </form>
    </div>
</section>

<script src="/js/login.js"></script>